#: import DungeonStats game_stats.DungeonStats
#: import JerkyStats game_stats.JerkyStats
#: import CoffeeStats game_stats.CoffeeStats
#: import TobaccoStats game_stats.TobaccoStats
#: import WhiskyStats game_stats.WhiskyStats
#: import TalismanStats game_stats.TalismanStats

<DungeonLayout>:
    size_hint: None, None
    height: self.minimum_height
    width: self.minimum_width

<Label>:
    font_name: "duality"
    color: 0.85, 0.65, 0.5, 1  # very light brown
    font_size: "25sp"
    text_size: self.size  # needed to make halign work
    halign: "left"
    valign: "middle"
    #padding: '20dp', '10dp', '20dp', '10dp'

<Button>:
    # disabled: True
    font_name: "duality"
    font_size: "25sp"
    halign: "center"
    background_color: 0.19, 0.075, 0.02, 1  # dark brown
    background_normal:""

<TitleLabel@Label>
    font_name: "edmunds"
    font_size: "75sp"
    color: 1, 0, 0, 1  # red
    halign: 'center'

<MainMenuButton@Button>
    text: "Main Menu"
    on_release:
        app.root.current = "main_menu"

<MusicButton@Button>
    text: "Music OFF" if app.music_on else "Music ON"
    on_release:
        app.music_on = not app.music_on

<OptionsButton@Button>
    text: "Options"
    on_release:
        app.root.current = "in_game_options" if app.ongoing_game else "out_game_options"

<ContinueOrLoadButton@Button>
    disabled: True if not app.ongoing_game and not app.saved_game else False
    text: "Continue game" if app.ongoing_game else "Load game"
    on_release:
        app.continue_game_or_load()

<MenuLayout@BoxLayout>
    orientation: "vertical"
    spacing: 10
    padding: "5dp", "0dp","5dp","5dp"

<Tile>:
    background_normal: ''   # sets the background default to white instead of predefined grey
    background_color: 0.4, 0.8, 1, 1
    size_hint: None,None
    width: "55dp"
    height: self.width
    kind: None
    disabled: True

    canvas:
        Color:
            rgba: (1,1,1,0.8) if not self.disabled else (1,1,1,1)

        Rectangle:  # draws the floor
            pos: self.pos
            size: self.size
            source: "./backgrounds/" + self.kind + "background.png" if self.kind else None

<ProgressBar>:
    padding: "40dp"

<ScrollView>:
    effect_cls: "ScrollEffect"  # avoids bouncing when reaching end of scroll

<MineMadnessGame>:
    on_active_character_id:
        name_label.text = root.active_character.name.upper()

    #on_level: level_label.text = "Depth: " + str(self.level * 30) + " ft."
    on_shovels: shovels_label.text = "Shovels: " + str(root.active_character.stats.shovels) if root.active_character.kind == "player" else ""
    on_weapons: weapons_label.text = "Weapons: " + str(root.active_character.stats.weapons) if root.active_character.kind == "player" else ""
    on_gems: gems_label.text = "Gems: " + str(root.active_character.gems) + '/' + str(root.total_gems) if root.active_character.kind == "player" else ""

    BoxLayout:
        orientation: "vertical"
        padding: "5dp"
        size_hint: 1,1

        # HEADER LABELS: CHARACTER NAME AND ABILITY BUTTON
        BoxLayout:
            padding: "5dp"
            orientation: "horizontal"
            size_hint: 1, 0.075

            Label:
                id: name_label
                size_hint: 0.6, 1
                font_size: "30sp"

            AbilityButton:
                id: ability_button
                size_hint: 0.4, 1
                font_size: "30sp"
                game: root

        # GUI: CHARACTER STATS AND INVENTORY
        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 0.2
            padding: "5dp"

            #CHARACTER STATS
            BoxLayout:
                orientation: "vertical"
                size_hint: 0.5,1
                spacing: "5dp"

                Label:
                    id: level_label
                Label:
                    id: weapons_label
                Label:
                    id: shovels_label
                Label:
                    id: gems_label

            #INVENTORY
            BoxLayout:
                orientation: "vertical"
                size_hint: 0.5,1
                spacing: "5dp"

                JerkyButton:
                    id: jerky_button
                    stats: JerkyStats()
                    game: root
                CoffeeButton:
                    id: coffee_button
                    stats: CoffeeStats()
                    game: root
                TobaccoButton:
                    id: tobacco_button
                    stats: TobaccoStats()
                    game: root
                WhiskyButton:
                    id: whisky_button
                    stats: WhiskyStats()
                    game: root
                TalismanButton:
                    id: talisman_button
                    stats: TalismanStats()
                    game: root

        BoxLayout:
            size_hint: 1, 0.025
            padding: "5dp", "0dp","5dp","5dp"
            ProgressBar:
                max: 20
                value: 0
                id: experience_bar

        ScrollView:  # contains the DungeonLayout (initialized by MineMadnessApp.add_dungeon_to_game())

            size_hint: 1, None
            height: min(self.parent.height * 0.650, 435 * dp(1))  # change 0.650 to 0.575 and 435 to 335 to reset
                                                                  # as it was before
        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 0.05
            padding: "0dp", "10dp","0dp","5dp"
            spacing: "5dp"
            OptionsButton:
            MainMenuButton:

<GameOver>:
    MenuLayout:
        TitleLabel:
            text: f"{app.game_over_message}\nThat's a game over" if app.game_over_message is not None else ""
            font_size: "50sp"
            size_hint: 1, 0.5
        TitleLabel:
            font_name: "duality"
            font_size: "50sp"
            text: f"You have reached a depth of {str(app.level * 30)} feet" if app.level is not None else ""
            size_hint: 1, 0.4
        MainMenuButton:
            size_hint: 1, 0.1


<OutGameOptions>
    MenuLayout:
        MenuLayout:
            size_hint: 1, 0.35
            TitleLabel:
                text: "Options"
                font_size: "60sp"
                size_hint: 1, 0.5
        MenuLayout:
            size_hint: 1, 0.65
            MusicButton:
                size_hint: 1, 0.1
            Button:
                text: "FX effects"
                size_hint: 1, 0.1
            Label:  # empty Label to act as spacer
                size_hint: 1, 0.2
            MainMenuButton:
                size_hint: 1, 0.1


<InGameOptions>
    MenuLayout:
        MenuLayout:
            size_hint: 1, 0.35
            TitleLabel:
                text: "Options"
                font_size: "60sp"
                size_hint: 1, 0.5
        MenuLayout:
            size_hint: 1, 0.65
            MusicButton:
                size_hint: 1, 0.1
            Button:
                text: "FX effects"
                size_hint: 1, 0.1
            Label:  # empty Label to act as spacer
                size_hint: 1, 0.2
            ContinueOrLoadButton:
                size_hint: 1, 0.1


<NewGameConfig>
    MenuLayout:
        MenuLayout:
            size_hint: 1, 0.35
            TitleLabel:
                text: "New Game"
                font_size: "60sp"
        MenuLayout:
            size_hint: 1, 0.65
            Button:
                text: "Get into the mine!"
                font_size: "30sp"
                on_release:
                    app.start_new_game()
            Button:
                text: "Mode: NORMAL" if app.game_mode_normal else "Mode: HARDCORE"
                font_size: "30sp"
                on_release:
                    app.game_mode_normal = not app.game_mode_normal
                    new_game_info.text ="Mode NORMAL: saved game is preserved if characters are killed" \
                    if app.game_mode_normal else "Mode HARDCORE: saved game is erased if characters are killed"
            MainMenuButton:
                font_size: "30sp"
            Label:
                id: new_game_info

<MainMenu>
    MenuLayout:
        MenuLayout:
            size_hint: 1, 0.35
            TitleLabel:
                text: "MINE MADNESS"
        MenuLayout:
            size_hint: 1, 0.65
            Button:
                disabled: True if app.ongoing_game else False  # this is to avoid a bug, see issue in GitHub
                text: "New game"
                font_size: "30sp"
                on_release:
                    app.root.current = "new_game_config"
            ContinueOrLoadButton:
                font_size: "30sp"
            Button:
                text: "How to play"
                font_size: "30sp"
                on_release:
                    app.root.current = "how_to_play"
            OptionsButton:
                font_size: "30sp"
            Button:
                text: "Quit"
                font_size: "30sp"
                on_release:
                    app.stop()
            Label:
                text: "(c) AppsBrivalles 2025"
                halign: "center"
