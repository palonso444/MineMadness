<HowToPlayLayout@BoxLayout>
    orientation: "horizontal"
    padding: "10dp"
    spacing: "10dp"
    size_hint: 1, None
    height: self.minimum_height

<HowToPlayLabel@Label>
    font_size: '200sp'
    size_hint: 1, None
    height: self.texture_size[1]
    text_size: self.width, None

<ImageLabel@HowToPlayLayout>
    Image:
        size_hint: 0.3,1
        #source: specify
    Label:
        size_hint: 0.7, 1
        #text: specify

<HowToPlay>
    MenuLayout:
        orientation: 'vertical'
        size_hint: 1, 1
        height: self.minimum_height

        ScrollView:
            size_hint: 1, 0.8
            BoxLayout:
                orientation: "vertical"
                size_hint: 1, None
                height: self.minimum_height
                HowToPlayLayout:
                    HowToPlayLabel:
                        text: "How To Play"
                HowToPlayLayout:
                    Image:
                        size_hint: 0.3, None
                        source: None
                    HowToPlayLabel:
                        size_hint: 0.7, None
                        text: "This is a sample"

        MainMenuButton:
            size_hint: 1, 0.1


