<DungeonLayout>:

<DungeonTile>:

    size_hint: None,None

    width: '120dp'

    height: self.width

    disabled: True 


<ScrollView>:

    effect_cls: 'ScrollEffect'  #this avoids bouncing when reaching end of scroll


<CrapgeonGame>:

    orientation: "vertical"

    Label:

        size_hint: 1,0.4

        text: "Text here"

    ScrollView:

        size_hint: 1, 0.6
    
        DungeonLayout:
            
            size_hint: None, None

            height: self.minimum_height

            width: self.minimum_width

            rows: 10

            cols: 10