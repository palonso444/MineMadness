<DungeonLayout>:


<Tile>:

    #token: None ---> this might allow set on_size() self.token.size = self.size on python file.
    
    background_normal: ''   #sets the background default to white instead of predefined grey
    
    background_color: 0.4, 0.8, 1, 1
    
    size_hint: None,None

    width: '100dp'

    height: self.width

    disabled: True

    kind: None

    canvas:
        
        Color:

            rgba: (1,1,1,0.8) if not self.disabled else (1,1,1,1)

        Rectangle:  #draws the floor
            
            pos: self.pos
            size: self.size
            source: 'exitbackground.png' if self.kind == 'exit' else 'floorbackground.png'



<ScrollView>:

    effect_cls: 'ScrollEffect'  #this avoids bouncing when reaching end of scroll


<CrapgeonGame>:

    orientation: "vertical"

    Label:

        size_hint: 1, 0.2

        text: "SHOVELS"

        font_size: '50sp'

    Label:

        size_hint: 1, 0.2

        text: str(root.active_character_id)

        font_size: '50sp'

    ScrollView:

        size_hint: 1, 0.6
    
        DungeonLayout:
            
            size_hint: None, None

            height: self.minimum_height

            width: self.minimum_width

            rows: 10

            cols: 10